
.container{
  background: #f1f1f1;
  width: 100%;
  height: 100%;
}
.servant_target_type_list{
  display: flex;
  flex-direction: column;
}
.servant_target_type_item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin:20rpx 20rpx 0 20rpx;
  background:#fff;
  padding:20rpx;
  border-radius:20rpx;
  height: 120rpx;
}
.servant_target_type_item:last-child{
  margin-bottom: 20rpx;
}
.servant_target_type_left{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  color: #999;
  width: 40%;
  margin-right: 10rpx;
}
.servant_target_type_icon{
  height: 100rpx;
  border-radius: 80rpx;
  margin-right: 20rpx;
}
.servant_target_type_right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #999;
  width: 58%
}
.servant_target_type_name{
  font-size: 30rpx;
  color: #666;
  font-weight:bold;
}
.servant_target_type_description{
  font-size: 22rpx;
  color: #999;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.nothing_servant_target_type_list{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #999;
}