
.container{
  background: #f1f1f1;
  width: 100%;
  height: 100%;
}
.servant_target_type_list{
  display: flex;
  flex-direction: column;
}
.servant_target_type_item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin:20rpx 20rpx 0 20rpx;
  background:#fff;
  padding:20rpx;
  border-radius:20rpx;
}
.servant_target_type_item:last-child{
  margin-bottom: 20rpx;
}
.servant_target_type_left{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  color: #999
}
.servant_target_type_icon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin-right: 20rpx;
}
.servant_target_type_right{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center
}
.wx-switch-input{width:42px !important;height:20px !important;}
.wx-switch-input::before{width:41px !important;height: 20px !important;}
.wx-switch-input::after{width: 18px !important;height: 18px !important;}