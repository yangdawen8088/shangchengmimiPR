}
.tag_price{
  text-decoration:line-through;
  color: #999;
  font-size: 22rpx
}
.price_group{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.productInfo_Nums{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.productInfo_Nums > image{
  width:16rpx;
  height: 16rpx;
  border: 1rpx solid #ddd;
