/* 右边的商品 */
.right_box{
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width:75%;
  background: #fff;
  display: flex;
  flex-direction: column;
  font-size: small;
  overflow: scroll;
  padding:0 10rpx;
  box-sizing:border-box;
}
.productItem{
  padding: 10px 6rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items:center;
  border-bottom: 1rpx solid #ddd;
}
.productItem > .productItemImage{
  width: 140rpx;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  position: relative;
}
.productImg{
  width: 140rpx;
  height: 140rpx;
}
.productItem >.productInfo{
  width: 75%;
}
.productInfo{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 20rpx;
}
.productInfo_name{
  font-size: 24rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.productInfo_decribe{
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}
.small_decribe{
  font-size: 20rpx;
  color: #989898;
  margin-bottom: 5rpx;
}
.productInfo_promotionName{
  background: #f7515f;
  border-radius: 5rpx;
  color: #fff;
  font-size: 20rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
}
.productInfo_Price{
  color: red;
  font-size: 24rpx;
  width: 100%;
  margin-top: 15rpx;
