
.container{
  background: #f8f8f8;
}
.coupon_list{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.coupon_item{
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  background: #fff;
  width:100%;
  border-radius:10rpx;
  position: relative;
}
.parting_line{
  position: absolute;
  width: 104%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  top:153rpx;
  left:-15rpx;
}
.circle{
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background: #f8f8f8;
}
.coupon_random_type{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  padding: 4rpx 10rpx;
  color: #fff;
  font-size:20rpx;
  border-top-left-radius:10rpx;
  border-bottom-right-radius: 10rpx;
}
.coupon_item_top{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 20rpx;
  box-sizing:border-box;
}
.coupon_item_top_left{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
  width:20%;
}
.coupon_money{
  font-size: 46rpx;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  align-items:  baseline;
}
.coupon_type{
  font-size: 20rpx;
}
.coupon_item_top_center{
  display: flex;
  flex-direction: column;
  width: 50%;
}
.coupon_item_name{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.coupon_item_time{
  font-size: 22rpx;
  color: #ccc;
}
.coupon_item_top_right{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.cou_btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  background: #ccc;
  color: #fff;
  font-size: 26rpx;
}
.coupon_item_bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1rpx dashed #eee;
  padding: 10rpx 20rpx;
  box-sizing:border-box;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  min-height:50rpx;
}
.coupon_item_bottom_remark{
  font-size: 20rpx;
  color: #666;
}
.noList{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #ddd;
  height:1000rpx;
}