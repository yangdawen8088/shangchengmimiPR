.chat_item{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin: 20rpx 6rpx
}
.user_content{
  display: flex;
  flex-direction: row;
  max-width:74%;
  background:#fff;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  position: relative;
  min-height: 76rpx;
  min-width: 66rpx
}
.user_text{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align:left;
  overflow:hidden;
}
.user_icon{
  width: 76rpx;
  height: 76rpx;
  border-radius: 10rpx;
}
.jiantou{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: 28rpx;
  transform: rotateY(180deg)
}
.img_content{
  width: 200rpx;
  border-radius: 10rpx;
  background:#fff;
}