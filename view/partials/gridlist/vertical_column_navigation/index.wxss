
.user_menu{
  display: flex;
  flex-direction: column;
  padding:10rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  font-size: 26rpx;
}
.user_menu_item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding:30rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f5f5f5;
}
.user_menu_item_link{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width:100%;
  font-size: 26rpx;
}
.kefu{
  padding: 0;
  margin: 0
}
.user_menu_item_left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.user_menu_item_icon{
  width: 60rpx;
  height: 60rpx;
  margin-right: 40rpx;
}
