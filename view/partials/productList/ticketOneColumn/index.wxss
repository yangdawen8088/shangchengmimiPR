}



.ticket_one_column_items2{
  padding: 10px;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  background: #fff;
  border-bottom: 1px solid #f1f1f1;
  min-height:120rpx; 
  position: relative;
}
.ticket_one_column_items2 image{
  width: 205rpx;
  height: 280rpx;
  border-radius:0rpx;

}
.ticket_one_column_items2 .ticket_one_column_items2_view1{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin-left: 20rpx;
  min-height:280rpx;
  width:470rpx;
  position: relative;
}
.ticket_one_column_items2_view1 .tags_content{
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow-x:hidden;
  width:100%;
  height:60rpx;
  white-space: nowrap;
  margin:10rpx 0;
}
.ticket_one_column_items2 .location_name{
  color: #555;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  margin-top:16rpx;
}
.left_box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.ticket_one_column_items2 .description{
  color: #999;
  font-size: 28rpx;
  margin: 30rpx 0 0 20rpx;
}
.ticket_one_column_items2 .location_name text{
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
  width:100%;
}
.ticket_one_column_name{
  color: #555;
  font-size: 32rpx;
  font-weight: bold;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
  width:100%;
}
.ticket_one_column_time{
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
  width:100%;
}
.ticket_one_column_price{
  margin-left: -6rpx;
  font-size: 38rpx;
  color: #ff0000;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.ticket_one_column_items2 .tags_item{
  border: 2rpx solid #eee;
  padding: 2rpx 12rpx;
  font-size: 22rpx;
  color: #888;
  margin-right: 10rpx;
  border-radius: 10rpx;
  white-space:nowrap;
  box-sizing: content-box;
  display:inline-block;

}
.ticket_one_column_items2 .unitShow{
  color:#bbb;
  font-size:24rpx;
  margin-left:4rpx;
  letter-spacing:4rpx;
}
.ticket_one_column_items2 .tag_price{
  text-decoration:none;
  font-size: 24rpx;
  color:#bbb;
  margin-left: 6rpx;
}
.ticket_one_column_items2 .price{
  font-size: 40rpx;
  height:38rpx;
  line-height:38rpx;
  font-weight: bold;
}
.to_car{
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  bottom: 20rpx;
  right: 26rpx;
  border-radius: 24rpx;
  font-size: 20rpx;
  border: 1rpx solid #ff0000;
  color: #ff0000;
  padding: 6rpx 18rpx;
}
.ticket_one_column_items2 .sale_item{
  display: flex;
  align-items: center;
  flex-direction: row;
  font-size: 20rpx;
  margin:20rpx 0;
}
.ticket_one_column_items2 .sale_item_title{
  color: #fff;
  padding:4rpx 6rpx;
}
.ticket_one_column_items2 .sale_item_value{
  padding:4rpx 6rpx;
  margin-left:10rpx;
}
.ticket_one_column_items2 .tags_item {
border:none;
background: #f8f8f8;
padding:6rpx 12rpx;
font-size:24rpx;
/* color:#888; */
margin-right:10rpx;
border-radius:6rpx;
white-space:nowrap;
box-sizing:content-box;
display:inline-block;

}
.discount{
  position: absolute;
  right: 10rpx;
  top: 50%;
  display: flex;
  flex-direction: column;
  border-radius: 90rpx;
  padding: 10rpx;
  color: #fff;
  align-items: center;
  width:90rpx;
  box-sizing:border-box;
  height:90rpx;
  margin-top: -50rpx;
  box-shadow: 1rpx 1rpx 1rpx #ddd;
}