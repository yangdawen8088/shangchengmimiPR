.multi_select_bg{
  position: absolute;
  bottom: 0;
  left:0;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height:100rpx;
  font-size:26rpx;
