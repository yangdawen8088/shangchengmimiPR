  justify-content: center;
  width:30%;
  box-sizing:border-box;
  font-size:28rpx;
  height:890rpx;
  background:#f4f4f4; 
  position: relative;
  left: 0;
  top: 0;
  z-index: 2
}
.product_type_two_item{
  display: flex;
